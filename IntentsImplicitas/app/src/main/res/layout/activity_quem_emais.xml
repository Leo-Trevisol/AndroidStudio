<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuemEMaisActivity">

   <LinearLayout
       android:id="@+id/linear1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toTopOf="@id/linear2"
       app:layout_constraintTop_toTopOf="parent"
       android:orientation="vertical">

       <TextView
           android:id="@+id/text_pergunta"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
            style="@style/TextViewPadrao"
           >
       </TextView>



   </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        app:layout_constraintBottom_toTopOf="@id/linear3"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/bt_pessoa1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            app:backgroundTint="@null"
            android:background="@drawable/shape_button"
            android:text="pessoa1">

        </Button>

        <Button
            android:id="@+id/bt_pessoa2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            app:backgroundTint="@null"
            android:background="@drawable/shape_button"
            android:text="pessoa2">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear2"
        app:layout_constraintBottom_toBottomOf="parent"
      >

        <ImageButton
            android:id="@+id/bt_voltar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/leftarrow"
            android:padding="5dp"
            android:background="@drawable/shape_modulo"
            >

        </ImageButton>

        <Button
            android:id="@+id/bt_proxima"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:backgroundTint="@null"
            android:background="@drawable/shape_button"
            android:text="continuar">

        </Button>

        <ImageButton
            android:id="@+id/bt_avancar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/shape_modulo"
            android:padding="5dp"
            android:src="@drawable/rightarrow">

        </ImageButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>